{% extends 'base.html.twig' %}

{% block title %}Actualite index{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css%22%3E
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="py-5 text-center mt-5">Actualite index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in actualites %}
            <tr>
                <td>{{ actualite.titre }}</td>
                <td>{{ actualite.contenu }}</td>
                <td>{{ actualite.auteur }}</td>
                <td>{{ actualite.date ? actualite.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_actualite_show', {'id': actualite.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_commentaire_new', {'id': actualite.id}) }}" class="btn btn-success">Add comment</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}" class="btn btn-warning">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_USER') or is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_actualite_new') }}" class="btn btn-primary">Crée un nouveau</a>
    {% endif %}
    <a href="/" class="btn btn-secondary">Revenir à l'accueil</a>
{% endblock %}