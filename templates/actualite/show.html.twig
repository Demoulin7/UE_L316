{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1 class="py-5 text-center mt-5">Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ actualite.auteur }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ actualite.date ? actualite.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('actualite/_delete_form.html.twig') }}

    {% for commentaire in actualite.commentaires %}
            <p>{{ commentaire.auteur }}</p>
            <p>{{ commentaire.date|date('d-m-Y') }}</p>
            <p>{{ commentaire.contenu }}</p>
        {% else %}
        <div>pas de commentaire sur cette article.</div>
     
    {% endfor %}

    {% if is_granted('ROLE_USER') %}
    <h2>poste un commantaire</h2>

    {{ form(comment_form) }}
    {% endif %}

    <a href="{{ path('app_actualite_index') }}">revenir Ã  la liste</a>
{% endblock %}
