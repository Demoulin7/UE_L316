{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ actualite.auteur }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ actualite.date ? actualite.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {% for commentaires in commentaire %}
        <div class="col-12">
            <h2>{{ commentaire.auteur }}</h2>
        </div>
        <div class="col-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="card-title">{{ actualite.contenu }}</h3>
                </div>
            </div>
        </div>
    {% endfor %}

    <a href="{{ path('app_actualite_index') }}">back to list</a>

    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('actualite/_delete_form.html.twig') }}
{% endblock %}
